{
  "family": "demo-web-td",
  "networkMode": "bridge",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": ["EC2"],
  "executionRoleArn": "REPLACE_ME_EXEC_ROLE_ARN",
  "taskRoleArn": "REPLACE_ME_TASK_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "demo-web",
      "image": "public.ecr.aws/nginx/nginx:alpine",
      "portMappings": [
        { "containerPort": 3000, "hostPort": 0, "protocol": "tcp" }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/demo-web",
          "awslogs-region": "REPLACE_ME_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "retries": 3,
        "command": ["CMD-SHELL", "curl -sf http://localhost:3000/health || exit 1"],
        "timeout": 5,
        "interval": 30,
        "startPeriod": 10
      }
    }
  ]
}
